{
  "name": "eac",
  "scripts": {
    "update": "cargo update && pnpm update && cd admin && pnpm update",
    "dev": "run-p dev:*",
    "dev:css": "sass --no-source-map --watch sass:public/css",
    "dev:vite": "cd admin && pnpm build-watch",
    "dev:rust": "cargo watch -w src -w templates -w code_themes -x run",
    "build": "run-s build:*",
    "build:css": "sass --no-source-map sass:public/css",
    "build:vite": "cd admin && pnpm build",
    "build:rust": "cargo run --release"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "sass": "^1.58.3"
  }
}
