{
  "scripts": {
    "update": "cargo update && pnpm update",
    "dev": "run-p -l dev:css dev:esbuild dev:rust",
    "dev-watch": "run-p -l dev:css dev:webpack dev:watcher",
    "dev:css": "sass --no-source-map --style=compressed --watch source_assets/sass:public/css",
    "dev:esbuild": "node ./source_assets/js/compiler.mjs",
    "dev:rust": "cargo run",
    "dev:watcher": "cargo watch -w src -w templates -w code_themes -x run",
    "build": "run-s -l build:*",
    "build:css": "sass --no-source-map --style=compressed source_assets/sass:public/css",
    "build:esbuild": "node ./source_assets/js/compiler.mjs",
    "build:rust": "cargo run --release",
    "esbuild": "node ./source_assets/js/compiler.mjs"
  },
  "devDependencies": {
    "axios": "^1.4.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.18.11",
    "esbuild-plugin-solid": "^0.5.0",
    "html-webpack-plugin": "^5.5.3",
    "npm-run-all": "^4.1.5",
    "sass": "^1.63.6",
    "solid-js": "^1.7.8"
  }
}
