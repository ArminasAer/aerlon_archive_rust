{
  "scripts": {
    "update": "cargo update && pnpm update",
    "dev": "run-p -l dev:css dev:webpack dev:rust",
    "dev-watch": "run-p -l dev:css dev:webpack dev:watcher",
    "dev:css": "sass --no-source-map --style=compressed --watch sass:public/css",
    "dev:webpack": "webpack",
    "dev:rust": "cargo run",
    "dev:watcher": "cargo watch -w src -w templates -w code_themes -x run",
    "build": "run-s -l build:*",
    "build:css": "sass --no-source-map --style=compressed sass:public/css",
    "build:webpack": "webpack",
    "build:rust": "cargo run --release",
    "webpack": "webpack"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "axios": "^1.4.0",
    "babel-loader": "^9.1.2",
    "babel-preset-solid": "^1.7.4",
    "cross-env": "^7.0.3",
    "html-webpack-plugin": "^5.5.3",
    "npm-run-all": "^4.1.5",
    "sass": "^1.63.6",
    "solid-js": "^1.7.6",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
