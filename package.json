{
  "name": "eac",
  "scripts": {
    "update": "cargo update && pnpm update && cd vite && pnpm update",
    "dev": "run-p -l dev:css dev:vite dev:rust",
    "dev-watch": "run-p -l dev:css dev:vite dev:watcher",
    "dev:css": "sass --no-source-map --watch sass:public/css",
    "dev:vite": "cd vite && pnpm build-watch",
    "dev:rust": "cargo run",
    "dev:watcher": "cargo watch -w src -w templates -w code_themes -x run",
    "build": "run-s -l build:*",
    "build:css": "sass --no-source-map sass:public/css",
    "build:vite": "cd vite && pnpm build",
    "build:rust": "cargo run --release"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "sass": "^1.60.0"
  }
}
